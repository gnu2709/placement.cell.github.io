
<head>
    <link rel="stylesheet" href="/css/interview-detail.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <title><%=title%></title>
</head>
<div id="main">

<div id="header">
    <h1> <%=company_name%> Interview Detail </h1>
    <div id="action-btn">
        <button id="interview-button"><a href="/">GO to HomePage</a> </button>
        <button id="interview-button"><a href="/interview">GO to Interviews</a> </button>
    </div>
</div>    
   
<div id="student-add"> 

        <form class= "new-student-page" id="student-form" action="/interview/addStudent/?compname=<%=company_id%>" method="POST">
            <select id="form-input" id="students" name="studentList" form="student-form" >
                <% for(student of student_detail) { %>    
                    <option  name = "student" value="<%= student.id%>"><%= student.name%></option>
                 <% } %>
                </select> 
                <input id="form-submit-button"  type="submit" value="Add Student to interview"></input>
        </form>

</div>

    <div id="list-of-student">
        <table>
            <tr id="table-head">
                <th id="table-head">Name of Student </th>
                <th id="table-head">Placement Status </th>
            </tr>   
        <%for (s of interview_student) { %>
            <tr id="table-head-place">
                <th id="table-head-column-name"> <%= s.name%> </th>
                <th>  
                    
                        <% if(s.placed == true ) {%>
                            <p> <%=s.name%> is placed in <%=s.student_placed%> </p>
                        <%}else{%>
                            <form method="post" action="/students/placed/?studentId=<%=s._id%>&comp_id=<%=company_id%>" class="inline">
                                <input type="hidden" name="extra_submit_param" value="extra_submit_value">
                                <button id="form-submit-button"  type="submit" name="submit_param" value="submit_value" class="link-button">
                                    Mark <%=s.name%> as Placed
                                </button>
                            </form>
                        <% } %>    
                    
                </th>
            </tr>   
           
    
        <% } %>    
    </table>
</div>
</div>

<script>
    let btn = document.getElementsById("form-submit-button")
    btn.innerHTML = "hello";
</script>