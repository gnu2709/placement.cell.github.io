
<head>
    <link rel="stylesheet" href="/css/interview.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <title><%=title%></title>
    </head>
    <div id="main">
        <h1> Interview Page </h1>
        <div id="action-btn">
            <button id="interview-button"><a href="/">GO to home page</a> </button>
            <div id="logout">
                <button id="logout-button" ><a href="users/destroy-session">logout</a> </button>
            </div>
        </div>
    
        <section id="interview-create">
            <div id="interview-page"> 
            <form class= "new-interview-page" action="/interview/create" id="new-interview-page"  method="POST">
                    <label id="field-label"> Company Name </label>
                    <input id= "form-input" type="text" class="company-name-input" name="company_name" placeholder="Enter Company Name" required="true"></input>
                    <label id="field-label"> Date </label>
                    <input id= "form-input" type="date" class="interview-date" name="date" placeholder="Enter date" required="true"></input>
                    <input id="form-submit-button" type="submit" value="Create a new Interview">
            </form>
        </div>    
            <h1>List of companies</h1>
    
            <% for(interview of interviews) {%>
              <button id="company-button"><a href="interview_detail/interview_detail/?id=<%=interview.id%>"> <%=interview.company_name%></a> </button>  
            <%}%>
    
        </section>
    </div>